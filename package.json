{
  "name": "pomodoro-todo-app",
  "version": "1.0.0",
  "description": "A Pomodoro timer app with task management and history tracking",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-safe": "set ELECTRON_DISABLE_GPU=1 && electron .",
    "dev": "electron . --dev",
    "dev-safe": "set ELECTRON_DISABLE_GPU=1 && electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist-portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable --publish=never"
  },
  "keywords": [
    "pomodoro",
    "todo",
    "task-management",
    "electron",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourname.pomodoro-todo-app",
    "productName": "Pomodoro Todo App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
