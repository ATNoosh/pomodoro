{
  "name": "pomodoro-todo-app",
  "version": "1.0.0",
  "description": "A Pomodoro timer app with task management and history tracking",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron .",
    "start-safe": "npm run build && set ELECTRON_DISABLE_GPU=1 && electron .",
    "dev": "npm run build && electron . --dev",
    "dev-safe": "npm run build && set ELECTRON_DISABLE_GPU=1 && electron . --dev",
    "dev:watch": "tsc --watch & electron . --dev",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite --ignore=node_modules/electron-builder",
    "dist-portable": "npm run pack"
  },
  "keywords": [
    "pomodoro",
    "todo",
    "task-management",
    "electron",
    "productivity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.yourname.pomodoro-todo-app",
    "productName": "Pomodoro Todo App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "overlay.html",
      "styles.css",
      "package.json",
      "node_modules/sql.js/dist/**/*"
    ],
    "forceCodeSigning": false,
    "win": {
      "target": "dir",
      "sign": false,
      "certificateFile": null,
      "certificatePassword": null
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  },
  "dependencies": {
    "sql.js": "^1.13.0"
  }
}
